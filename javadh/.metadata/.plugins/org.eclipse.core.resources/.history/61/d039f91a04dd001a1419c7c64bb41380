package com.andre.java;

public abstract class Exercicios01 {

	public static void main(String[] args) {
		
		Exercicios01.monstrarSalarioFuncionario();
		

	}
	
	
	
	
	// Exercicio 01
	public static void monstrarSalarioFuncionario() {
		
		int anoAumentoSalario = 1996;
		int anoFinal = 2015;
		double salarioInicial = 1000.00;
		double juros = 0.0015;
		
		salarioInicial *= juros;
		
		for(int i = 1996; i <= anoFinal; i++) {
			
			juros *= 2;
			salarioInicial *= juros;
		}
		
		System.out.println(salarioInicial);
	}

}
