	public static void monstrarSalarioFuncionario() {
		
		int anoAumentoSalario = 1996;
		int anoFinal = 2015;
		double salarioInicialAumento = 1000.00;
		double juros = 0.0015;
		
		salarioInicialAumento *= juros;
		
		for(int i = 1996; i <= anoFinal; i++) {
			
			juros *= 2;
			
			
			
			
			
		}
		
		
		
		
		
		
		
		
		
	}

